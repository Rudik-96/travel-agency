generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // url больше не пишем здесь – она уже в prisma.config.ts
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  consultations Consultation[]
}

model Banner {
  id        Int      @id @default(autoincrement())
  imageUrl  String            
  placeName String          
  placeInfo Json              
  createdAt DateTime @default(now())
}

model Consultation {
  id        Int      @id @default(autoincrement())
  user      User?    @relation(fields: [userId], references: [id])
  userId    Int?
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}